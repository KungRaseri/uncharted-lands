{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,
  "framework": "sveltekit",
  "buildCommand": "npm run build",
  "devCommand": "npm run dev -- --port $PORT",
  "installCommand": "npm install",
  "outputDirectory": "build",
  "crons": [
    {
      "path": "/api/cron/hourlyProduction",
      "schedule": "0 * * * *"
    },
    {
      "path": "/api/cron/hourlyHalfHourProduction",
      "schedule": "0 */30 * * *"
    }
  ],
  "functions": {
    "api/**/*.ts": {
      "memory": 1024,
      "maxDuration": 10
    }
  }
}
