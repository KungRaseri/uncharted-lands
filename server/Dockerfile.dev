# Development Dockerfile for Server (E2E Testing)
# Uses ts-node-dev for hot reload during testing

FROM node:22-alpine

WORKDIR /app

# Install dependencies for building native modules
RUN apk add --no-cache python3 make g++

# Copy package files
COPY package*.json ./

# Install ALL dependencies (including dev dependencies for ts-node-dev)
RUN npm ci

# Copy source code
COPY . .

# Expose port
EXPOSE 3001

# Health check
HEALTHCHECK --interval=10s --timeout=5s --retries=5 --start-period=30s \
  CMD wget --spider -q http://localhost:3001/health || exit 1

# Run in development mode with ts-node-dev
# This will watch for file changes and auto-reload
CMD ["npm", "run", "dev"]
